% 100000000000000 first-id mod ceiling cvi

/index 100000 def
/milestone 0 def

% Verify each bus id is pairwise coprime.
busses {
    pop
    busses {
        pop
        2dup eq {               % Skip comparison against self
            pop
        }{
            2dup gcd 1 eq {
                pop
            }{
                (gcd of ) print
                100 string cvs print
                ( ) print
                100 string cvs print
                ( ne 1.  Exiting.) print nl
                quit
            } ifelse
        } ifelse
    } forall
} forall
pop pop pop pop

false {
    % Naive approach.  Works for all the samples, but the input requires the
    % application of a mathemital thoery to run in any reasonable time.
    first-id {
        progress {
            dup milestone sub index div 1 gt {
                /milestone milestone index add def
                (-> ) print milestone =
            } if
        } if
        {dup (> ) print 100 string cvs print nl} ifdebug
        fits-offsets? {exit} if
        first-id add
    } bind loop
}{
    (#) print busses length 100 string cvs print  nl
    /idx 0 def
    busses length dup array exch {dup} repeat
    busses {
        0 get
        exch
        2 array  astore
        idx exch
        put
        /idx idx 1 add def
    } forall dump-conguences
    quit                        % XXX
} ifelse

=

input closefile
quit

